<% @user ||= current_user %>
<section>
	<div class = "user_info">
	<%= gravatar_for(@user, size: 52) %>
	<h1> <%= @user.name %> </h1>
		<% unless params[:action] == "show" %>
			<span><%= link_to "view my profile", @user %> </span>
			<span><%= pluralize(@user.microposts.count, "micropost") %></span> 
	<% end %>
	</div>
</section>
<section>
	<%= render 'shared/stats' %>
</section>

